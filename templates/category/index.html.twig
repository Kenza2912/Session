{% extends 'base.html.twig' %}

{% block title %}Les Catégories{% endblock %}

{% block body %}
<h2 class="text-2xl font-bold mb-4">Les Catégories</h2>

<a href="{{ path('category.new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">
    Créer une catégorie
</a>

<div class="container mx-auto mt-4">
    <table class="min-w-full bg-white shadow-md rounded my-6">
        <thead>
            <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                <th class="py-3 px-6 text-left">Numéro</th>
                <th class="py-3 px-6 text-left">Nom de la catégorie</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th class="py-3 px-6 text-center">Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody class="text-gray-600 text-sm font-light">
            {% for category in categories %}
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 px-6 text-left">{{ category.id }}</td>
                    <td class="py-3 px-6 text-left">
                        <a href="{{ path('show.category', {id : category.id}) }}" class="text-blue-600 hover:underline">
                            {{ category.nameCategory }}
                        </a>
                    </td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td class="py-3 px-6 text-center">
                            <a href="{{ path('edit.category', { id: category.id }) }}" class="bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-3 rounded">
                                Modifier
                            </a>
                            <a href="{{ path('delete.category', { id: category.id }) }}" class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-3 rounded">
                                Supprimer
                            </a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}


