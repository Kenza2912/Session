{% extends 'base.html.twig' %}

{% block title %}Les Catégories{% endblock %}

{% block body %}

<h2>Les Catégories</h2>

<a href="{{ path('category.new')}}" class="btn btn-primary">
    Créer une catégorie
</a>
    <div class="container mt-4">
        
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Numéro</th>
                <th scope="col">Nom de la catégorie</th>
             
              </tr>
            </thead>
            <tbody>
             
                {% for category in categories %}

                    <tr class="table-primary">
                        {% if is_granted('ROLE_ADMIN') %}
                        <th scope="row">{{category.id}}</th>
                        
                        <td> <a href="{{ path('show.category', {id : category.id}) }}"> {{category.nameCategory}}</a></td>
                        <td>
                            <a href="{{ path('edit.category', { id: category.id }) }}" class="btn btn-info">Modifier</a>
                        </td>
                        <td>
                            <a href="{{ path('delete.category', { id: category.id }) }}" class="btn btn-warning">Supprimer</a>
                        </td>
                        {% endif %}
                    </tr>
                
              
            
            
            
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
