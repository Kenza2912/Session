{% extends "base.html.twig" %}

{% block title %} Modifier une Catégorie{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">Modification d'une catégorie</h1>

		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.nameCategory) }}
			{{ form_widget(form.nameCategory) }}
			<div class="form-error">
				{{ form_errors(form.nameCategory) }}
			</div>
		</div>


		<div class="form-group">
			{{ form_row(form._token) }}
		</div>

		<button type="submit"  class="btn btn-primary mt-4">Modifier une recette</button>

	</div>
	{{ form_end(form) }}
</div>{% endblock %}
