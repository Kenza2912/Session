{% extends 'base.html.twig' %}

{% block title %}Les Stagiaires{% endblock %}

{% block body %}

<h2>Les Stagiaires</h2>

<a href="{{ path('trainee.new')}}" class="btn btn-primary">
    Créer un stagiaire
</a>
    <div class="container mt-4">
        
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Numéro</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Genre</th>
                <th scope="col">Date de naissance</th>
                <th scope="col">ville</th>
                <th scope="col">email</th>
                <th scope="col">numéro de téléphone</th>
             
              </tr>
            </thead>
            <tbody>
             
                {% for trainee in trainees %}
                    <tr class="table-primary">
                        <th scope="row">{{trainee.id}}</th>
                        <td> <a href=""> {{trainee.name}}</a></td>
                        <td> <a href=""> {{trainee.firstName}}</a></td>
                        <td> <a href=""> {{trainee.gender}}</a></td>
                        <td> <a href=""> {{trainee.dateBirth|date('d/m/Y')}}</a></td>
                        <td> <a href=""> {{trainee.city}}</a></td>
                        <td> <a href=""> {{trainee.email}}</a></td>
                        <td> <a href=""> {{trainee.phone}}</a></td>
                        <td>
                            <a href="" class="btn btn-info">Modifier</a>
                        </td>
                        <td>
                            <a href="" class="btn btn-warning">Supprimer</a>
                        </td>
                        
                    </tr>
                
              
            
            
            
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}