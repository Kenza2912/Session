{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}


    <div class="container mt-4">
        
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Numéro</th>
                <th scope="col">Nom du module</th>
                <th scope="col">date de début</th>
                <th scope="col">date de fin</th>
             
              </tr>
            </thead>
            <tbody>
             
                {% for session in sessions %}
                    <tr class="table-primary">
                        <th scope="row">{{session.id}}</th>
                        <td><a href="{{ path('show.session', {id : session.id}) }}">{{session.training.nameTraining}}</a></td>
                        <td>{{session.startDate|date('d/m/Y')}}</td>
                        <td>{{session.endDate|date('d/m/Y')}}</td>
                        {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a href="" class="btn btn-info">Modifier</a>
                        </td>
                        <td>
                            <a href="{{ path('delete.session', { id: session.id }) }}" class="btn btn-info">Supprimer</a>
                        </td>
                        {% endif %}
                    </tr>
                
              
            
            
            
                {% endfor %}
            </tbody>
        </table>

    </div>


   

{% endblock %}






                    
        