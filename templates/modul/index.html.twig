{% extends 'base.html.twig' %}

{% block title %}Les Modules{% endblock %}

{% block body %}

<a href="{{path('modul.new')}}" class="btn btn-primary">
    Créer un module
</a>
    <div class="container mt-4">
        
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Numéro</th>
                <th scope="col">Nom du module</th>
             
              </tr>
            </thead>
            <tbody>
             
                {% for modul in modules %}
                    <tr class="table-primary">
                        <th scope="row">{{modul.id}}</th>
                        <td>{{modul.nameModul}}</td>
                        <td>
                            <a href="{{ path('edit.modul', { id: modul.id }) }}" class="btn btn-info">Modifier</a>
                        </td>
                        <td>
                            <a href="{{ path('delete.modul', { id: modul.id }) }}" class="btn btn-warning">Supprimer</a>
                        </td>
                        
                    </tr>
                
              
            
            
            
                {% endfor %}
            </tbody>
        </table>

    </div>


{% endblock %}
